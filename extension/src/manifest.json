{
  "manifest_version": 2,
  "name": "DevSpaces Electron Launcher",
  "version": "1.0.0",
  "description": "Launcher to open the electron application with specific options",
  "author": "Ashwanth A R",
  "permissions": ["storage", "tabs", "*://github.com/*/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*/*"],
      "run_at": "document_end",
      "js": ["save-commit-hash.js"]
    }
  ],
  "page_action": {
    "default_popup": "index.html"
  }
}
